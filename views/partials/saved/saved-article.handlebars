<div class="panel panel-default">
    <div class="panel-heading">
      {{this.title}}
      {{#if saved}}

       
       <button type="submit" class="btn btn-warning btn-sm pull-right" data-toggle="modal" data-id="{{this._id}}" id="noteBtn" data-target="#noteModal">Comment</button>

      {{else}}
       <button type="button" class="btn btn-danger-sm" data-id="{{this._id}}" id="unsaveBtn"data-target="#unsaveModal">Unsave</button>
      {{/if}}
      
      <button type="button" class="btn btn-danger btn-sm pull-right" data-toggle="modal" data-id="{{this._id}}" id="deleteBtn"data-target="#deleteModal">Delete</button>
    
    </div>
    
    <div class="panel-body">
      <p><a href="{{this.link}}">{{this.link}}</a></p>
      <p>{{this.summary}}</p>
    </div>

</div>


  


<!-- Trigger the Edit modal with a button -->
            

              <!-- Modal -->
              <div id="noteModal" class="modal fade" data-id="modal{{_id}}" role="dialog" >
                <div class="modal-dialog">

                  <!-- Modal content-->
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal">&times;</button>

                      <h4 class="modal-title">{{title}}</h4>
                    </div>
                    <div class="modal-body">
                      <form>
                        <div class="form-group">
                          <label for="titleinput">Title:</label>
                          <input type="text" class="form-control" id="titleinput">
                        </div>
                        <div class="form-group">
                          <label for="bodyinput">Body</label>
                          <textarea type="text" class="form-control" rows="3" id="bodyinput"> </textarea>
                        </div>
                        <button type="submit" class="btn btn-default" id="saveNote">Submit</button>
                      </form>
                    </div>
                    {{!-- <div class="modal-footer">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div> --}}
                  </div>
                </div>
              </div>

              <!-- Trigger the Delete with a button -->
              

              <!-- Modal -->
              <div id="deleteModal" class="modal fade" role="dialog">
                <div class="modal-dialog">

                  <!-- Modal content-->
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                      <h4 class="modal-title">Delete Article</h4>
                    </div>
                    <div class="modal-body">
                      <p>Your article {{this.title}} has been deleted!</p>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                  </div>
                </div>
              </div>